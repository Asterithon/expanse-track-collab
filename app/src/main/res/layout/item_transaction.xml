<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="20dp"
    android:background="@drawable/bg_transaction"
    android:orientation="horizontal"
    android:layout_marginBottom="20dp"
    android:id="@+id/layout_item">

    <ImageView
        android:id="@+id/iv_icon"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:src="@drawable/baseline_arrow_upward_24" />

    <!-- Detail transaction -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingStart="12dp">

        <TextView
            android:id="@+id/tv_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="#000000"
            android:maxLines="2"
            android:ellipsize="end"
            android:paddingRight="10dp"
            android:layout_marginBottom="10dp"
            android:text="Lorem ipsum dolor sit amet consectetur adipisicing elit. Inventore sit quo dolor natus ullam accusamus excepturi necessitatibus ex corrupti consectetur!"
             />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="#777777"
                android:text="type"
                android:layout_marginRight="8dp"/>
            <TextView
                android:id="@+id/tv_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="#777777"
                android:text="Date" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="#FF0000"
        android:text="-$45.00"
        android:layout_gravity="center" />
</LinearLayout>